= form_for @tell do |f|
  - if @tell.errors.any?
    #error_explanation
      %h2= "#{pluralize(@tell.errors.count, "error")} prohibited this tell from being saved:"
      %ul
        - @tell.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :message
    = f.text_field :message
  .field
    = f.label :published
    = f.date_select :published
  .actions
    = f.submit 'Save'
